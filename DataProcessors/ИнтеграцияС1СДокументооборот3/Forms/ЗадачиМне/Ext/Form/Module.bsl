&НаСервере
Процедура ОбновитьПараметрыБыстрогоПоиска(НастройкиДокументооборота, ТребуетсяПовторноеОбновление)
	
	// Настройка быстрого поиска.
	БыстрыйПоиск.Очистить();
	
	НоваяСтрокаБыстрогоПоиска("Состояние", НСтр("ru = 'Состояние:'"), "Строка;СписокЗначений");
	НоваяСтрокаБыстрогоПоиска("Автор", НСтр("ru = 'Автор:'"), "DMEmployee");
	НоваяСтрокаБыстрогоПоиска("ВидДействия", НСтр("ru = 'Вид задачи:'"), "DMTaskActionType");
	НоваяСтрокаБыстрогоПоиска("ДатаС", НСтр("ru = 'Дата с:'"), "Дата", Дата(1,1,1), НСтр("ru = 'Дата'") + "1");
	НоваяСтрокаБыстрогоПоиска("ДатаПо", НСтр("ru = 'Дата по:'"), "Дата", Дата(1,1,1), НСтр("ru = 'Дата'") + "2");
	НоваяСтрокаБыстрогоПоиска("Исполнитель", НСтр("ru = 'Исполнитель:'"), "DMEmployee;DMCompleteRole");
	НоваяСтрокаБыстрогоПоиска("Проект", НСтр("ru = 'Проект:'"), "DMProject");
	НоваяСтрокаБыстрогоПоиска("Флаг", НСтр("ru = 'Флаг:'"), "Строка");
	
	БыстрыйПоиск.Сортировать("Сортировка");
	
	// Списки выбора быстрого поиска.
	СпискиВыбораБыстрогоПоиска = Новый Структура;
	СпискиВыбораБыстрогоПоиска.Вставить("Состояние", СписокВыбораСостояний());
	СпискиВыбораБыстрогоПоиска.Вставить("Флаг", СписокВыбораФлагов());
	СпискиВыбораБыстрогоПоиска.Вставить("ВидДействия", СписокВыбораВидовДействий());
	СпискиВыбораБыстрогоПоиска.Вставить("Исполнитель", СписокВыбораИсполнителей(НастройкиДокументооборота));
	
	// Предыдущие значения быстрого поиска.
	НастройкиОтбора = ОбщегоНазначения.ХранилищеОбщихНастроекЗагрузить(
		КлючФормы,
		"БыстрыйПоискЗадачиМне",
		Новый Массив);
	
	Для Каждого Элемент Из НастройкиОтбора Цикл
		
		Если Не ЗначениеЗаполнено(Элемент.Значение) Или ТипЗнч(Элемент) <> Тип("Структура") Тогда
			Продолжить;
		КонецЕсли;
		
		СписокВыбора = Неопределено;
		СпискиВыбораБыстрогоПоиска.Свойство(Элемент.Параметр, СписокВыбора);
		Если СписокВыбора <> Неопределено Тогда
			Если ТипЗнч(Элемент.Значение) = Тип("СписокЗначений") Тогда
				ЗначениеУстарело = Ложь;
				Для Каждого ЭлементСписка Из Элемент.Значение Цикл
					Если ЗначениеФильтраУстарело(СписокВыбора, ЭлементСписка.Значение) Тогда
						ЗначениеУстарело = Истина;
						Прервать;
					КонецЕсли;
				КонецЦикла;
				Если ЗначениеУстарело Тогда
					ТребуетсяПовторноеОбновление = Истина;
					Продолжить;
				КонецЕсли;
			Иначе
				ЗначениеУстарело = ЗначениеФильтраУстарело(
					СписокВыбора,
					Элемент.Значение,
					Элемент.ЗначениеID,
					Элемент.ЗначениеТип);
				Если ЗначениеУстарело Тогда
					ТребуетсяПовторноеОбновление = Истина;
					Продолжить;
				КонецЕсли;
			КонецЕсли;
		КонецЕсли;
		
		Для Каждого Строка Из БыстрыйПоиск Цикл
			
			Если Строка.Фиксированный Тогда
				Продолжить;
			КонецЕсли;
			
			Если Строка.Параметр = Элемент.Параметр Тогда
				ЗаполнитьЗначенияСвойств(Строка, Элемент);
			КонецЕсли;
			
		КонецЦикла;
		
	КонецЦикла;
	
КонецПроцедуры

