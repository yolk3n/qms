Функция ЗначениеФильтраУстарело(СписокВыбора, Значение, ЗначениеID = "", ЗначениеТип = "")
	
	ЗначениеУстарело = Истина;
	ТипЗначения = ТипЗнч(Значение);
	
	Для Каждого ЭлементСпискаВыбора Из СписокВыбора Цикл
		
		Если ТипЗнч(ЭлементСпискаВыбора.Значение) = Тип("Структура") Тогда
			
			Если ТипЗначения = Тип("Строка") Тогда
				
				Если ЭлементСпискаВыбора.Значение.Наименование = Значение
						И ЭлементСпискаВыбора.Значение.ID = ЗначениеID
						И ЭлементСпискаВыбора.Значение.Тип = ЗначениеТип Тогда
					ЗначениеУстарело = Ложь;
					Прервать;
				КонецЕсли;
				
			ИначеЕсли ТипЗначения = Тип("Структура") Тогда
				
				Если ЭлементСпискаВыбора.Значение.Наименование = Значение.Наименование
						И ЭлементСпискаВыбора.Значение.ID = Значение.ID
						И ЭлементСпискаВыбора.Значение.Тип = Значение.Тип Тогда
					ЗначениеУстарело = Ложь;
					Прервать;
				КонецЕсли;
				
			КонецЕсли;
			
		ИначеЕсли ТипЗнч(ЭлементСпискаВыбора.Значение) = Тип("Строка") Тогда
			
			Если ТипЗначения = Тип("Строка") Тогда
				
				Если ЭлементСпискаВыбора.Значение = Значение Тогда
					ЗначениеУстарело = Ложь;
					Прервать;
				КонецЕсли;
				
			ИначеЕсли ТипЗначения = Тип("Структура") Тогда
				
				Если ЭлементСпискаВыбора.Значение = Значение.Наименование Тогда
					ЗначениеУстарело = Ложь;
					Прервать;
				КонецЕсли;
				
			КонецЕсли;
			
		КонецЕсли
		
	КонецЦикла;
	
	Возврат ЗначениеУстарело;
	
КонецФункции

