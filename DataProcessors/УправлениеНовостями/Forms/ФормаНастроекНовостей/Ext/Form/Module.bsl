				Прокси = ПолучениеФайловИзИнтернета.ПолучитьПрокси("http://");

				ИмяСервера_Сервер = "";
				ИмяСервера_Порт = "";
				// В имени сервера через двоеточие может идти порт (например, news1c.ru:8081), выделить его.
				ГдеДвоеточие = СтрНайти(Выборка.Сайт, ":");
