					ИмяСервера_Сервер = СокрЛП(Лев(Выборка.Сайт, ГдеДвоеточие - 1));
					ИмяСервера_Порт = Число(Прав(Выборка.Сайт, СтрДлина(Выборка.Сайт) - ГдеДвоеточие));
				Иначе
					ИмяСервера_Сервер = СокрЛП(Выборка.Сайт);
					ИмяСервера_Порт   = Неопределено;
				КонецЕсли;

				ЛокальноеHTTPСоединение = Неопределено;

				ЛокальноеHTTPСоединение = Новый HTTPСоединение(
					ИмяСервера_Сервер, // Сервер
					ИмяСервера_Порт, // Порт
					"", // Логин,
					"", // Пароль,
					Прокси,
					15, // НастройкиПолученияНовостей.HTTPСоединениеТаймаутСоединенияСекунд, // Таймаут.
					?(ВРег(Выборка.Протокол) = ВРег("https"), ОбщегоНазначенияКлиентСервер.НовоеЗащищенноеСоединение(), Неопределено)); // ЗащищенноеСоединение

				ЛокальноеИмяФайлаНаСервере = Выборка.ИмяФайла;
				ЛокальноеИмяФайлаНаСервере = СтрЗаменить(ЛокальноеИмяФайлаНаСервере, "[from]", "last=1");
				ЛокальноеИмяФайлаНаСервере = СтрЗаменить(ЛокальноеИмяФайлаНаСервере, "[config]", "config=" + ЭтотПродукт);
