&НаКлиенте
Процедура КомандаПолучитьОтладочнуюИнформациюОНовости(Команда)

	Если НЕ ПустаяСтрока(ЭтотОбъект.УИННовости) Тогда

		ПрочиеПараметры = Новый Структура;
		ПрочиеПараметры.Вставить("ОбластьДанных", ?(ЭтотОбъект.ОбластьДанных >= 0, ЭтотОбъект.ОбластьДанных, Неопределено));
		ПрочиеПараметры.Вставить("ВыбраннаяОбластьДанных", Неопределено);
		ПрочиеПараметры.Вставить("ПараметрЗапуска", ПараметрЗапуска);
		ИнформацияОНовости = ОбработкаНовостейВызовСервера.ПолучитьИнформациюОНовости(ЭтотОбъект.УИННовости, ПрочиеПараметры);

		#Если ВебКлиент Тогда

			ТекстовыйДокумент = Новый ТекстовыйДокумент;
			ТекстовыйДокумент.УстановитьТекст(ИнформацияОНовости);
			ТекстовыйДокумент.Показать(НСтр("ru='Отладочная информация о новости'"));

		#Иначе

			// Если задать имя файла сразу, то пользователю будет удобнее сохранять.
			ИмяВременногоФайла = ПолучитьИмяВременногоФайла("txt");
			ТекстовыйДокумент = Новый ТекстовыйДокумент; // АПК:561 форма не открывается в мобильном клиенте.
			ТекстовыйДокумент.УстановитьТекст(ИнформацияОНовости);
			ТекстовыйДокумент.Показать(НСтр("ru='Отладочная информация о новости'"), ИмяВременногоФайла);

		#КонецЕсли

	КонецЕсли;

КонецПроцедуры

&НаКлиенте
Процедура КомандаДиагностикаПолученияНовостей(Команда)

	// Пометка = ИСТИНА - выполнять на сервере.
	// АПК:1297-выкл Идентификаторы.
	СписокШагов = Новый СписокЗначений;
		СписокШагов.Добавить( 1, "Настройки программы: значения констант", Истина); // Идентификатор.
