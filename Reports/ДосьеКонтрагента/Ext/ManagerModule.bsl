Процедура ВывестиНалоги(ИнформацияОСвязях, ДанныеОтчета, ДанныеДосье)
	
	ТабличныйДокумент = Новый ТабличныйДокумент;
	ОбластиМакета     = ВсеОбластиМакета("Налоги");
	
	ДанныеДосье.Вставить("РезультатНалоги", ТабличныйДокумент);
	ДанныеДосье.Вставить("ИмяФайлаНалоги",
		СтроковыеФункции.СтрокаЛатиницей(
			СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(НСтр("ru='Досье %1 - налоги'"),
				ОбщегоНазначенияКлиентСервер.ЗаменитьНедопустимыеСимволыВИмениФайла(
					ИнформацияОСвязях.НаименованиеСокращенное, ""))));
	
	ОткрытыеДанные = ИнформацияОСвязях.ОткрытыеГосударственныеДанныеФНС;
	ТабличныйДокумент.Вывести(ОбластиМакета.Шапка);
	Если ОткрытыеДанные.Количество() = 0 Тогда
		ТабличныйДокумент.Вывести(ОбластиМакета.ШапкаКомментарийНетДанных);
		Возврат;
	КонецЕсли;
	
	ПоследнийГодОткрытыеДанные = 0;
	ОткрытыеДанныеЗаГод1 = Неопределено;
	Для Каждого ТекущиеОткрытыеДанные Из ИнформацияОСвязях.ОткрытыеГосударственныеДанныеФНС Цикл
		Если ТекущиеОткрытыеДанные.Год > ПоследнийГодОткрытыеДанные Тогда
			ПоследнийГодОткрытыеДанные = ТекущиеОткрытыеДанные.Год;
			ОткрытыеДанныеЗаГод1 = ТекущиеОткрытыеДанные;
		КонецЕсли;
	КонецЦикла;
	
	СтрокиОткрытыхДанных = Новый Массив;
	СтрокиОткрытыхДанных.Добавить(ОткрытыеДанныеЗаГод1);
	СтрокиОткрытыхДанных.Добавить(ОткрытыеДанные.Найти(ПоследнийГодОткрытыеДанные - 1, "Год"));
	
	ОткрытыеДанныеПоследнийГод = ОткрытыеДанные.Найти(ПоследнийГодОткрытыеДанные - 2, "Год");
	Если ОткрытыеДанныеПоследнийГод <> Неопределено Тогда
		// Временное решение, пока есть данные только за 2 года
		// Когда появятся за 3 года, отрабатывать не будет
		СтрокиОткрытыхДанных.Добавить(ОткрытыеДанные.Найти(ПоследнийГодОткрытыеДанные - 2, "Год"));
	КонецЕсли;
	
	ВГраница = СтрокиОткрытыхДанных.ВГраница();
	ЕстьНД   = Ложь;
	
	ОбластиМакета.ГодыШапка.Параметры.Год1 = Формат(ПоследнийГодОткрытыеДанные, "ЧГ=0");
	ОбластиМакета.ГодыШапка.Параметры.Год2 = Формат(ПоследнийГодОткрытыеДанные - 1, "ЧГ=0");
	Если СтрокиОткрытыхДанных.Количество() = 3 Тогда
		ОбластиМакета.ГодыШапка.Параметры.Год3 = Формат(ПоследнийГодОткрытыеДанные - 2, "ЧГ=0");
	Иначе
		// Временное решение, пока есть данные только за 2 года
		// Когда появятся за 3 года, отрабатывать не будет
		ОбластьГод = ОбластиМакета.ГодыШапка.НайтиТекст("Год3");
		ОбластьГодОбъединенная = ОбластиМакета.ГодыШапка.Область(ОбластьГод.Верх, ОбластьГод.Лево);
		ОчиститьПодобласть(ОбластиМакета.НалогШапка, ОбластьГодОбъединенная.Лево, ОбластьГодОбъединенная.Право);
		ОчиститьПодобласть(ОбластиМакета.НалогНазваниеНалога, ОбластьГодОбъединенная.Лево, ОбластьГодОбъединенная.Право);
		ОчиститьПодобласть(ОбластиМакета.ЧисленностьСотрудников, ОбластьГодОбъединенная.Лево, ОбластьГодОбъединенная.Право);
		ОчиститьПодобласть(ОбластиМакета.СистемаНалогообложения, ОбластьГодОбъединенная.Лево, ОбластьГодОбъединенная.Право);
		ОчиститьПодобласть(ОбластиМакета.УчастиеВКГН, ОбластьГодОбъединенная.Лево, ОбластьГодОбъединенная.Право);
		ОчиститьПодобласть(ОбластиМакета.ДанныеОтчетностиШапка, ОбластьГодОбъединенная.Лево, ОбластьГодОбъединенная.Право);
		ОчиститьПодобласть(ОбластиМакета.ПоказательОтчетности, ОбластьГодОбъединенная.Лево, ОбластьГодОбъединенная.Право);
		ОчиститьПодобласть(ОбластиМакета.Замыкатель, ОбластьГодОбъединенная.Лево, ОбластьГодОбъединенная.Право);
		ОбластьГод.Очистить(Истина, Истина, Истина);
	КонецЕсли;
	
	ТабличныйДокумент.Вывести(ОбластиМакета.ГодыШапка);
	
	// Вывод налогов
	Если Не ВывестиТаблицуНалогов(ТабличныйДокумент, ОбластиМакета, СтрокиОткрытыхДанных, ЕстьНД) Тогда
		// Если не выведена ни одна строка отчета, тогда отобразить "Нет данных о налогах"
		ТабличныйДокумент.Очистить();
		ТабличныйДокумент.Вывести(ОбластиМакета.Шапка);
		ТабличныйДокумент.Вывести(ОбластиМакета.ШапкаКомментарийНетДанных);
		Возврат;
	КонецЕсли;
	
	// Численность сотрудников
	ЕстьДанныеПоЧисленности = Ложь;
	Для Итератор = 0 По ВГраница Цикл
		НомерГодаСтрокой = Формат(Итератор + 1, "ЧГ=0");
		ИмяПараметра = "ЗначениеГод" + НомерГодаСтрокой;
		Если СтрокиОткрытыхДанных[Итератор] = Неопределено Тогда
			Значение = Неопределено;
		Иначе
			Значение = СтрокиОткрытыхДанных[Итератор].КоличествоСотрудников;
		КонецЕсли;
		Если Значение = Неопределено Тогда
			ОбластиМакета.ЧисленностьСотрудников.Параметры[ИмяПараметра] = НСтр("ru = 'н/д'");
			ЕстьНД = Истина;
		Иначе
			ЕстьДанныеПоЧисленности = ЕстьДанныеПоЧисленности Или (Значение <> 0 И Значение <> Неопределено);
			ОбластиМакета.ЧисленностьСотрудников.Параметры[ИмяПараметра] = Значение;
		КонецЕсли;
		Если Итератор < 2 Тогда
			УстановитьКартинкуПоказателя(
				ОбластиМакета.ЧисленностьСотрудников,
				"ЧисленностьГод" + НомерГодаСтрокой,
				Значение,
				?(Итератор + 1 > СтрокиОткрытыхДанных.ВГраница(), Неопределено, ЗначениеПоля(СтрокиОткрытыхДанных[Итератор + 1], "КоличествоСотрудников")));
		КонецЕсли;
	КонецЦикла;
	Если ЕстьДанныеПоЧисленности Тогда
		ТабличныйДокумент.Вывести(ОбластиМакета.ЧисленностьСотрудников);
	КонецЕсли;
	
	// Система налогообложения
	ЕстьДанныеПоНалогообложению = Ложь;
	Для Итератор = 0 По ВГраница Цикл
		НомерГодаСтрокой = Формат(Итератор + 1, "ЧГ=0");
		ИмяПараметра = "ЗначениеГод" + НомерГодаСтрокой;
		Если СтрокиОткрытыхДанных[Итератор] = Неопределено Тогда
			Значение = Неопределено;
		Иначе
			Значение = ПредставлениеНалогообложенияВГоду(СтрокиОткрытыхДанных[Итератор]);
		КонецЕсли;
		Если Значение = Неопределено Тогда
			ОбластиМакета.СистемаНалогообложения.Параметры[ИмяПараметра] = НСтр("ru = 'н/д'");
			ЕстьНД = Истина;
		Иначе
			ЕстьДанныеПоНалогообложению = Истина;
			ОбластиМакета.СистемаНалогообложения.Параметры[ИмяПараметра] = Значение;
		КонецЕсли;
	КонецЦикла;
	Если ЕстьДанныеПоНалогообложению Тогда
		ТабличныйДокумент.Вывести(ОбластиМакета.СистемаНалогообложения);
	КонецЕсли;
	
	// Участие в КГН
	ЕстьДанныеУчастиеВКГН = Ложь;
	Для Итератор = 0 По ВГраница Цикл
		НомерГодаСтрокой = Формат(Итератор + 1, "ЧГ=0");
		ИмяПараметра = "ЗначениеГод" + НомерГодаСтрокой;
		Если СтрокиОткрытыхДанных[Итератор] = Неопределено Тогда
			Значение = Неопределено;
		Иначе
			Значение = СтрокиОткрытыхДанных[Итератор].УчастиеВКГН;
		КонецЕсли;
		Если Значение = Неопределено Тогда
			ОбластиМакета.УчастиеВКГН.Параметры[ИмяПараметра] = НСтр("ru = 'н/д'");
			ЕстьНД = Истина;
		Иначе
			ЕстьДанныеУчастиеВКГН = Истина;
			ОбластиМакета.УчастиеВКГН.Параметры[ИмяПараметра] = Значение;
		КонецЕсли;
	КонецЦикла;
	Если ЕстьДанныеУчастиеВКГН Тогда
		ТабличныйДокумент.Вывести(ОбластиМакета.УчастиеВКГН);
	КонецЕсли;
	
	// Бухгалтерская отчетность
	ВыведенаШапкаОтчетности = Ложь;
	ВГраница = СтрокиОткрытыхДанных.ВГраница();
	ПоказателиОтчетности = Новый СписокЗначений;
	ПоказателиОтчетности.Добавить("СуммаДоходов" , НСтр("ru = 'Доходы'"));
	ПоказателиОтчетности.Добавить("СуммаРасходов", НСтр("ru = 'Расходы'"));
	Для Каждого ЭлементПоказателиОтчетности Из ПоказателиОтчетности Цикл
		ВидПоказателя = ЭлементПоказателиОтчетности.Значение;
		ЕстьЗначения = Ложь;
		ЗначенияПоГодам = Новый Массив;
		Для Итератор = 0 По ВГраница Цикл
			Если СтрокиОткрытыхДанных[Итератор] = Неопределено Тогда
				Значение = Неопределено;
			Иначе
				Значение = СтрокиОткрытыхДанных[Итератор][ВидПоказателя];
				ЕстьЗначения = ЕстьЗначения Или (Значение <> 0 И Значение <> Неопределено);
			КонецЕсли;
			ЗначенияПоГодам.Добавить(Значение);
		КонецЦикла;
		
		Если Не ЕстьЗначения Тогда
			Продолжить;
		КонецЕсли;
		
		Для Итератор = 0 По ВГраница Цикл
			НомерГодаСтрокой = Формат(Итератор + 1, "ЧГ=0");
			ИмяПараметра = "ЗначениеГод" + НомерГодаСтрокой;
			Значение = ЗначенияПоГодам[Итератор];
			Если Значение = Неопределено Тогда
				ОбластиМакета.ПоказательОтчетности.Параметры[ИмяПараметра] = НСтр("ru = 'н/д'");
				ЕстьНД = Истина;
			Иначе
				ОбластиМакета.ПоказательОтчетности.Параметры[ИмяПараметра] = Значение;
			КонецЕсли;
			Если Итератор < 2 Тогда
				УстановитьКартинкуПоказателя(
					ОбластиМакета.ПоказательОтчетности,
					"ДоходыРасходыГод" + НомерГодаСтрокой,
					Значение,
					?(Итератор + 1 > СтрокиОткрытыхДанных.ВГраница(), Неопределено, ЗначениеПоля(СтрокиОткрытыхДанных[Итератор + 1], ВидПоказателя)));
			КонецЕсли;
		КонецЦикла;
		Если ЕстьЗначения Тогда
			Если Не ВыведенаШапкаОтчетности Тогда
				ТабличныйДокумент.Вывести(ОбластиМакета.ДанныеОтчетностиШапка);
				ВыведенаШапкаОтчетности = Истина;
			КонецЕсли;
			ОбластиМакета.ПоказательОтчетности.Параметры.НазваниеПоказателя = ЭлементПоказателиОтчетности.Представление;
			ТабличныйДокумент.Вывести(ОбластиМакета.ПоказательОтчетности);
		КонецЕсли;
	КонецЦикла;
	
	ТабличныйДокумент.Вывести(ОбластиМакета.Замыкатель);
	ТабличныйДокумент.Вывести(ОбластиМакета.Пояснения);
	
	Если ЕстьНД Тогда
		ТабличныйДокумент.Вывести(ОбластиМакета.ПоясненияНД);
	КонецЕсли;
	
КонецПроцедуры

Функция ЗначениеПоля(Объект, ИмяПоля)
	
	Если Объект = Неопределено Тогда
		Возврат Неопределено;
	КонецЕсли;
	
	Возврат Объект[ИмяПоля];
	
