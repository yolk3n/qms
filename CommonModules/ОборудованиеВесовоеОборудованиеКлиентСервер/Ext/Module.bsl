// Заполняет структуру параметров операции на Оборудовании.
//
// Параметры:
//  ВесТары - Число
// 
// Возвращаемое значение:
//  Структура.
//
Функция ПараметрыОперацииЭлектронныеВесы(ВесТары = 0) Экспорт
	
	Параметры = Новый Структура();
	Параметры.Вставить("ВесТары", ВесТары);
	Возврат Параметры;
	
КонецФункции

// Заполняет структуру параметров операции на Оборудовании.
// 
// Возвращаемое значение:
//  Структура.
//
Функция ПараметрыОперацииВесыСПечатьюЭтикеток() Экспорт
	
	Параметры = Новый Структура();
	Параметры.Вставить("ТаблицаТоваров", Новый Массив());  // Массив Структур, см. ПараметрыСтрокиВыгрузкиВВесыСПечатьюЭтикеток() 
	Параметры.Вставить("ЧастичнаяВыгрузка", Ложь);
	Возврат Параметры;
	
КонецФункции

// Заполняет структуру выгрузки товарной позиции на весы с печатью этикеток.
// 
// Возвращаемое значение:
//  Структура.      
//
Функция ПараметрыСтрокиВыгрузкиВВесыСПечатьюЭтикеток() Экспорт
	
	ДополнительныеЦены = Новый Структура();  // Дополнительные цены
	ДополнительныеЦены.Вставить("Цена1");
	ДополнительныеЦены.Вставить("Цена2");
	ДополнительныеЦены.Вставить("Цена3");
	ДополнительныеЦены.Вставить("Цена4");
	
	ПараметрыСтроки = Новый Структура();
	ПараметрыСтроки.Вставить("PLU"); // Число,Обязательно - Индекс товара на весах.
	ПараметрыСтроки.Вставить("Код"); // Число,Обязательно - Код товара который печатается на штрихкоде этикетки.
	ПараметрыСтроки.Вставить("Штрихкод");
	ПараметрыСтроки.Вставить("Наименование"); // Строка,Необязательно
	ПараметрыСтроки.Вставить("НаименованиеПолное");  // Строка,Необязательно
	ПараметрыСтроки.Вставить("ВесовойТовар", Истина);
	ПараметрыСтроки.Вставить("Цена", 0);  // Число,Необязательно - Цена товара на весах за килограмм.
	ПараметрыСтроки.Вставить("ОписаниеТовара");  // Строка,Необязательно - Текстовое описание товара (состав товара, список ингредиентов и пр.)
	ПараметрыСтроки.Вставить("СрокХранения"); // Число,Необязательно - Длительность хранения/срок годности товара, в днях  
	ПараметрыСтроки.Вставить("ФорматЭтикетки"); // Число,Необязательно - Номер формата этикетки
	ПараметрыСтроки.Вставить("КнопкаТовара");  // Число,Необязательно - Номер кнопки товара на весах
	ПараметрыСтроки.Вставить("ДополнительныеЦены", ДополнительныеЦены); // Структура - Дополнительные цены
	
	Возврат ПараметрыСтроки;
	
КонецФункции

// Заполняет структуру параметров операции на Оборудовании.
// 
// Возвращаемое значение:
//  Структура.
//
Функция ПараметрыОперацииВыгрузкиИзображенийВесыСПечатьюЭтикеток() Экспорт
	
	Параметры = Новый Структура();
	Параметры.Вставить("ТаблицаИзображений", Новый Массив());
	Возврат Параметры;
	
КонецФункции         

// Заполняет структуру выгрузки изображений на весы с печатью этикеток.
// 
// Возвращаемое значение:
//  Структура.      
//
Функция ПараметрыСтрокиВыгрузкиИзображенийВВесыСПечатьюЭтикеток() Экспорт
	
	ДополнительныеЦены = Новый Структура();  // Дополнительные цены
	ПараметрыСтроки = Новый Структура();
	ПараметрыСтроки.Вставить("PLU"); // Число,Обязательно - Индекс товара на весах.
	ПараметрыСтроки.Вставить("Код"); // Число,Обязательно - Код товара который печатается на штрихкоде этикетки.
	ПараметрыСтроки.Вставить("Изображение");
	
	Возврат ПараметрыСтроки;
	
КонецФункции

