		Возврат Неопределено;
	КонецЕсли;
	
	РазделениеВключено = ОбщегоНазначения.РазделениеВключено();
	Если РазделениеВключено Тогда
		КлючЗадания = "ВыгрузкаНоменклатуры" + Строка(ПараметрыСеанса.ОбластьДанныхЗначение);
	Иначе
		КлючЗадания = "ВыгрузкаНоменклатуры";
	КонецЕсли;
	
	УстановитьПривилегированныйРежим(Истина);
	
	Результат        = Новый Массив;
	КоличествоКлючей = КлючиВыгрузки.Количество();
	Для ОбратныйИндекс = 1 По КоличествоКлючей Цикл
		Организация = КлючиВыгрузки[КоличествоКлючей - ОбратныйИндекс];
		Задания = ФоновыеЗадания.ПолучитьФоновыеЗадания(Новый Структура("Ключ", КлючЗадания + XMLСтрока(Организация)));
		Если Задания.Количество() И Задания[0].Состояние = СостояниеФоновогоЗадания.Активно Тогда
			Продолжить;
		ИначеЕсли Задания.Количество() И Задания[0].Состояние = СостояниеФоновогоЗадания.Завершено Тогда
			Результат.Добавить(Организация);
		КонецЕсли;
		Если ОбновлятьКлючи = Истина Тогда
			КлючиВыгрузки.Удалить(КоличествоКлючей - ОбратныйИндекс);
		КонецЕсли;
	КонецЦикла;
	
	УстановитьПривилегированныйРежим(Ложь);
	
	Если ОбновлятьКлючи = Истина Тогда
		ОбщегоНазначения.ХранилищеОбщихНастроекСохранить("РаботаСНоменклатурой", "ПомощникВыгрузки\КлючиВыгрузки", КлючиВыгрузки);
	КонецЕсли;
	
	Возврат Результат;
	
