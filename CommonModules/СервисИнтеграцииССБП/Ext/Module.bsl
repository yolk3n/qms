// Возвращает массив участников СБП, которые поддерживают функционал кассовых ссылок.
//
// Возвращаемое значение:
//  Массив из ПеречислениеСсылка.ПлатежныеСистемы - список участников СБП с поддержкой кассовых ссылок.
//
Функция ПоддержкаКассовыхСсылок() Экспорт
	
	УчастникиСБП = Новый Массив;
	
	Запрос = Новый Запрос;
	Запрос.Текст = 
		"ВЫБРАТЬ
		|	ИдентификаторыУчастниковСБП.Идентификатор КАК Идентификатор
		|ИЗ
		|	РегистрСведений.ИдентификаторыУчастниковСБП КАК ИдентификаторыУчастниковСБП
		|ГДЕ
		|	ИдентификаторыУчастниковСБП.КассовыеСсылки";
	
	РезультатЗапроса = Запрос.Выполнить();
	
	ВыборкаДетальныеЗаписи = РезультатЗапроса.Выбрать();
	Пока ВыборкаДетальныеЗаписи.Следующий() Цикл
		Участник = УчастникСБППоИдентификатору(
			ВыборкаДетальныеЗаписи.Идентификатор,
			Ложь);
		Если ЗначениеЗаполнено(Участник) Тогда
			УчастникиСБП.Добавить(Участник);
		КонецЕсли;
	КонецЦикла;
	
	Если УчастникиСБП.Найти(Перечисления.ПлатежныеСистемы.СБП_PayMaster) = Неопределено Тогда
		УчастникиСБП.Добавить(Перечисления.ПлатежныеСистемы.СБП_PayMaster);
	КонецЕсли;
	
	Если УчастникиСБП.Найти(Перечисления.ПлатежныеСистемы.СБП_1ССБП) = Неопределено Тогда
		УчастникиСБП.Добавить(Перечисления.ПлатежныеСистемы.СБП_1ССБП);
	КонецЕсли;
	
	Возврат УчастникиСБП;
	
КонецФункции

