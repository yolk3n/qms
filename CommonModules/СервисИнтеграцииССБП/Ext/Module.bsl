		ДанныеДляПодписи.Добавить(ИдентификаторТорговойТочки);
	КонецЕсли;
	
	РезультатПлатежнаяСистема = ЗаголовокАутентификацииПоДаннымАутентификации(
		ПлатежнаяСистема,
		ПараметрыАутентификации,
