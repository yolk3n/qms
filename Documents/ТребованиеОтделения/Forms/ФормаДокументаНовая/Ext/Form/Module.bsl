//Вставка Соколов
Процедура ОтменитьСтрокиНаСервере(ПричинаОтмены)
	
	Изменен=Ложь;  
	НачатьТранзакцию();
	Для Каждого СтрИД из Элементы.Товары.ВыделенныеСтроки Цикл
		СтрокаТаблицы=Объект.Товары.НайтиПоИдентификатору(СтрИД);
		Если СтрокаТаблицы <> Неопределено Тогда
			
			Если Объект.Статус=Перечисления.СтатусыТребованийОтделений.НеСогласован Тогда
				СтрокаТаблицы.ПричинаОтмены = ПричинаОтмены;
				Если Не СтрокаТаблицы.Отменено Тогда
					СтрокаТаблицы.Отменено = Истина;
				КонецЕсли;
			ИначеЕсли Объект.Статус=Перечисления.СтатусыТребованийОтделений.Согласован И НЕ СтрокаТаблицы.Отменено Тогда
				Рег = РегистрыСведений.СостоянияТребованийОтделений.СоздатьНаборЗаписей();
				Рег.Отбор.ИдентификаторСтроки.Установить(СтрокаТаблицы.ИдентификаторСтроки);
				Рег.Прочитать();
				Если Рег.Количество()=1 Тогда
					СтрокаТаблицы.ПричинаОтмены = ПричинаОтмены;
					СтрокаТаблицы.Отменено = Истина;
					Если Рег[0].Состояние=Перечисления.СостоянияТребований.Требование Тогда
						Рег[0].Состояние=Перечисления.СостоянияТребований.Отменено;
						Рег[0].Описание=сокрЛП(ПричинаОтмены)+" Пользователь: "+ПараметрыСеанса.ТекущийПользователь+" "+ТекущаяДата();
						Рег.Записать(Истина);
						Изменен=Истина;
					Иначе
						ОбщегоНазначенияКлиентСервер.СообщитьПользователю("Идентификатор строки "+СтрокаТаблицы.ИдентификаторСтроки+" состояние "+Рег[0].Состояние+", а отмена допустима только в состоянии ""Требование"".");
					КонецЕсли;	
				Иначе
					_Изменен=Ложь;
					Для Каждого СтрР из Рег Цикл
						Если СтрР.Состояние=Перечисления.СостоянияТребований.Требование Тогда
							СтрР.Состояние=Перечисления.СостоянияТребований.Отменено;
							СтрР.Описание=сокрЛП(ПричинаОтмены)+" Пользователь: "+ПараметрыСеанса.ТекущийПользователь+" "+ТекущаяДата();
							_Изменен=Истина;
						КонецЕсли;	
					КонецЦикла;	
					Если _Изменен Тогда
						Рег.Записать(Истина);
						Изменен=Истина;
					КонецЕсли;
				Конецесли;	
			Иначе	
			КонецЕсли;	
			
			
			
		КонецЕсли;
	КонецЦикла;
	
	Если Изменен Тогда
		Записать();   
		ЗафиксироватьТранзакцию();
		Отказ=Ложь;
		РегистрыСведений.СостоянияВнутреннихЗаказов.ОтразитьСостояниеЗаказа(Объект.Ссылка);
		ЗаказыСервер.ВыполнитьКонтрольЗаказаПослеПроведения(Объект.Ссылка, Отказ);
		
	Иначе
		ОтменитьТранзакцию();
	КонецЕсли;
	
КонецПроцедуры	
