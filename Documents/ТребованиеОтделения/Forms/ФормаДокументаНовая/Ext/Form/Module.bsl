Процедура ОбновитьКолВоЕдХранения()

	Запрос = новый запрос;
	Запрос.УстановитьПараметр("Номенклатура",Объект.Товары.Выгрузить().ВыгрузитьКолонку("Номенклатура"));
	Запрос.УстановитьПараметр("Склад",Объект.СкладОтправитель);
	Запрос.Текст=
	"ВЫБРАТЬ
	|	СвободныеОстаткиОстатки.Номенклатура КАК Номенклатура,
	|	СУММА(СвободныеОстаткиОстатки.ВНаличииОстаток - СвободныеОстаткиОстатки.ВРезервеСоСкладаОстаток) КАК Количество
	|ИЗ
	|	РегистрНакопления.СвободныеОстатки.Остатки(
	|			,
	|			Номенклатура В (&Номенклатура)
	|				И Склад = &Склад) КАК СвободныеОстаткиОстатки
	|
	|СГРУППИРОВАТЬ ПО
	|	СвободныеОстаткиОстатки.Номенклатура";
	Выборка = Запрос.Выполнить().Выгрузить();
	
	Для Каждого Стр из Объект.Товары Цикл
		Коэффициент=сок_Сервер.ПолучитьКоэффициентЕдиницыИзмерения(Стр.Номенклатура,Стр.ЕдиницаИзмерения,Стр.Номенклатура.ЕдиницаИзмерения);
		Стр.КоличествоВЕдиницахХранения=Стр.КоличествоВЕдиницахИзмерения*Коэффициент;
		СтрН=Выборка.Найти(Стр.Номенклатура,"Номенклатура");
		Если СтрН=Неопределено Тогда
			Стр.Остаток=0;
		Иначе
			Стр.Остаток=СтрН.Количество/Коэффициент;
		КонецЕсли;	
		
	КонецЦикла;	
	
	
КонецПроцедуры

