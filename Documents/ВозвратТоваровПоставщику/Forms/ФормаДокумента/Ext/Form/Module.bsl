	|	ТаблицаТовары.Партия               КАК Партия,
	|	СУММА(ТаблицаТовары.Количество)    КАК Количество,
	|	СУММА(ТаблицаТовары.СуммаНДС)      КАК СуммаНДС,
	|	СУММА(ТаблицаТовары.СуммаСНДС)     КАК СуммаСНДС
	|ПОМЕСТИТЬ ДанныеВозврата
	|ИЗ
	|	Документ.ВозвратТоваровПоставщику.Товары КАК ТаблицаТовары
	|ГДЕ
	|	Ссылка.Проведен
	|	И Ссылка <> &ТекущийВозврат
	|	И (ДокументПоступления, Номенклатура, СерияНоменклатуры, Партия) В
	|			(ВЫБРАТЬ
	|				ДокументПоступления, Номенклатура, СерияНоменклатуры, Партия
	|			ИЗ
	|				ДанныеПоступления)
	|
	|СГРУППИРОВАТЬ ПО
	|	ТаблицаТовары.ДокументПоступления,
	|	ТаблицаТовары.Номенклатура,
	|	ТаблицаТовары.СерияНоменклатуры,
	|	ТаблицаТовары.Партия
	|
	|ИНДЕКСИРОВАТЬ ПО
	|	ДокументПоступления,
	|	Номенклатура,
	|	СерияНоменклатуры,
	|	Партия
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|ВЫБРАТЬ
	|	ДанныеПоступления.ДокументПоступления     КАК ДокументПоступления,
	|	ДанныеПоступления.Номенклатура            КАК Номенклатура,
	|	ДанныеПоступления.СерияНоменклатуры       КАК СерияНоменклатуры,
	|	ДанныеПоступления.Партия                  КАК Партия,
	|	ДанныеПоступления.ИсточникФинансирования  КАК ИсточникФинансирования,
	|	ДанныеПоступления.Валюта                  КАК ВалютаПоступления,
	|	ДанныеПоступления.Количество - ЕСТЬNULL(ДанныеВозврата.Количество, 0)  КАК Количество,
	|	ДанныеПоступления.СуммаНДС - ЕСТЬNULL(ДанныеВозврата.СуммаНДС, 0)      КАК СуммаНДС,
	|	ДанныеПоступления.СуммаСНДС - ЕСТЬNULL(ДанныеВозврата.СуммаСНДС, 0)    КАК СуммаСНДС
	|ИЗ
	|	ДанныеПоступления КАК ДанныеПоступления
	|	ЛЕВОЕ СОЕДИНЕНИЕ
	|		ДанныеВозврата КАК ДанныеВозврата
	|		ПО
	|			ДанныеВозврата.ДокументПоступления = ДанныеПоступления.ДокументПоступления
	|			И ДанныеВозврата.Номенклатура = ДанныеПоступления.Номенклатура
	|			И ДанныеВозврата.СерияНоменклатуры = ДанныеПоступления.СерияНоменклатуры
	|			И ДанныеВозврата.Партия = ДанныеПоступления.Партия
	|ГДЕ
	|	ДанныеПоступления.Количество - ЕСТЬNULL(ДанныеВозврата.Количество, 0) > 0
	|
	|УПОРЯДОЧИТЬ ПО
	|	ДанныеПоступления.ДокументПоступления.Дата УБЫВ
	|";
	
	Товары = Объект.Товары.Выгрузить();
	
	Запрос = Новый Запрос(ТекстЗапроса);
	Запрос.УстановитьПараметр("ТекущийВозврат", Объект.Ссылка);
	Запрос.УстановитьПараметр("ТаблицаТовары", Товары);
	Запрос.УстановитьПараметр("Организация", Объект.Организация);
	Запрос.УстановитьПараметр("Партнер", Объект.Партнер);
	Запрос.УстановитьПараметр("Контрагент", Объект.Контрагент);
	Запрос.УстановитьПараметр("ДоговорКонтрагента", ОБъект.ДоговорКонтрагента);
	
	Отбор = Новый Структура("Номенклатура, СерияНоменклатуры, Партия");
	
	Действия = ОбработкаТабличнойЧастиКлиентСервер;
	СтруктураДействий = Новый Структура;
	СтруктураДействий.Вставить(Действия.Действие_ПересчитатьКоличествоУпаковок());
	
	КэшированныеЗначения = Неопределено;
	
	ДанныеПоступлений = Запрос.Выполнить().Выгрузить();
	
	Объект.Товары.Очистить();
	Для Каждого ТекущаяСтрока Из Товары Цикл
		
		ЗаполнитьЗначенияСвойств(Отбор, ТекущаяСтрока);
		НайденныеСтроки = ДанныеПоступлений.НайтиСтроки(Отбор);
		
		Если НайденныеСтроки.Количество() > 0 Тогда
			
			Количество = ТекущаяСтрока.Количество;
			Для Каждого НайденнаяСтрока Из НайденныеСтроки Цикл
				
				Если Количество = 0 Тогда
					Прервать;
				КонецЕсли;
				
				НоваяСтрока = Объект.Товары.Добавить();
				ЗаполнитьЗначенияСвойств(НоваяСтрока, ТекущаяСтрока);
				
				НоваяСтрока.ДокументПоступления = НайденнаяСтрока.ДокументПоступления;
				НоваяСтрока.ИсточникФинансирования = НайденнаяСтрока.ИсточникФинансирования;
				
				Если Количество < НайденнаяСтрока.Количество Тогда
					НоваяСтрока.Количество = Количество;
					НоваяСтрока.СуммаНДС = НайденнаяСтрока.СуммаНДС * Количество / НайденнаяСтрока.Количество;
					НоваяСтрока.СуммаСНДС = НайденнаяСтрока.СуммаСНДС * Количество / НайденнаяСтрока.Количество;;
				Иначе
					НоваяСтрока.Количество = НайденнаяСтрока.Количество;
					НоваяСтрока.СуммаНДС = НайденнаяСтрока.СуммаНДС;
					НоваяСтрока.СуммаСНДС = НайденнаяСтрока.СуммаСНДС;
				КонецЕсли;
				
				Если Объект.Валюта <> НайденнаяСтрока.ВалютаПоступления Тогда
					КурсНовойВалюты = РаботаСКурсамиВалют.ПолучитьКурсВалюты(Объект.Валюта, Объект.Дата);
					КурсСтаройВалюты = РаботаСКурсамиВалют.ПолучитьКурсВалюты(НайденнаяСтрока.ВалютаПоступления, Объект.Дата);
					
					НоваяСтрока.СуммаСНДС = РаботаСКурсамиВалютКлиентСервер.ПересчитатьПоКурсу(НоваяСтрока.СуммаСНДС, КурсСтаройВалюты, КурсНовойВалюты);
					НоваяСтрока.СуммаНДС = РаботаСКурсамиВалютКлиентСервер.ПересчитатьПоКурсу(НоваяСтрока.СуммаНДС, КурсСтаройВалюты, КурсНовойВалюты);
					
				КонецЕсли;
				
				ОбработкаТабличнойЧастиСервер.ОбработатьСтрокуТабличнойЧасти(НоваяСтрока, СтруктураДействий, Неопределено);
				
				НоваяСтрока.Сумма = НоваяСтрока.СуммаСНДС - ?(Объект.ЦенаВключаетНДС, 0, НоваяСтрока.СуммаНДС);
				НоваяСтрока.Цена = НоваяСтрока.Сумма / ?(НоваяСтрока.КоличествоВЕдиницахИзмерения = 0, 1, НоваяСтрока.КоличествоВЕдиницахИзмерения);
				
				Количество = Количество - НоваяСтрока.Количество;
				
				НайденнаяСтрока.Количество = НайденнаяСтрока.Количество - НоваяСтрока.Количество;
				НайденнаяСтрока.СуммаНДС = НайденнаяСтрока.СуммаНДС - НоваяСтрока.СуммаНДС;
				НайденнаяСтрока.СуммаСНДС = НайденнаяСтрока.СуммаСНДС - НоваяСтрока.СуммаСНДС;
				Если НайденнаяСтрока.Количество = 0 Тогда
					ДанныеПоступлений.Удалить(НайденнаяСтрока);
				КонецЕсли;
				
			КонецЦикла;
			
			Если Количество > 0 Тогда
				НоваяСтрока = Объект.Товары.Добавить();
				ЗаполнитьЗначенияСвойств(НоваяСтрока, ТекущаяСтрока);
				НайденныеСтроки.ДокументПоступления = Документы.ПоступлениеТоваров.ПустаяСсылка();
				НайденныеСтроки.Цена = 0;
				НайденныеСтроки.Сумма = 0;
				НайденныеСтроки.СуммаНДС = 0;
				НайденныеСтроки.СуммаСНДС = 0;
				ОбработкаТабличнойЧастиСервер.ОбработатьСтрокуТабличнойЧасти(НоваяСтрока, СтруктураДействий, КэшированныеЗначения);
			КонецЕсли;
			
		Иначе
			
			НоваяСтрока = Объект.Товары.Добавить();
			ЗаполнитьЗначенияСвойств(НоваяСтрока, ТекущаяСтрока);
			НоваяСтрока.ДокументПоступления = Документы.ПоступлениеТоваров.ПустаяСсылка();
			
		КонецЕсли;
		
	КонецЦикла;
	
	ОбновитьИнформациюПоПоступлениям();
	
КонецПроцедуры

